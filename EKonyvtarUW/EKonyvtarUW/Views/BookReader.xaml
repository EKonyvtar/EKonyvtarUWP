<Page
    x:Class="EKonyvtarUW.Views.BookReader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" SizeChanged="Page_SizeChanged">

    <StackPanel>
        <ProgressBar Name="progress" Minimum="0" Maximum="100" IsIndeterminate="True" />
        <WebView Name="wv" Source="{Binding book.ContentUri}" Width="500" Height="500" DefaultBackgroundColor="#FFF7EFEF"/>
    </StackPanel>
</Page>
