<UserControl
    x:Class="EKonyvtarUW.Views.BookControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EKonyvtarUW.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" >

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="234"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border
            Width="192"
            Height="234"
            CornerRadius="8"
            BorderThickness="5" >
            <Border.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#CC000000" Offset="0.561"/>
                    <GradientStop Color="#33151414" Offset="1"/>
                    <GradientStop Color="#E0423C3C" Offset="0.008"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <!-- 160/130 -->
            <Image
                Source="{Binding ThumbnailUrl}"
                Height="224"
                Width="182"
                Stretch="UniformToFill"
                Grid.Row="0" />
        </Border>

        <TextBlock Text="{Binding Title}" Grid.Row="1" Width="182" />
    </Grid>
</UserControl>
